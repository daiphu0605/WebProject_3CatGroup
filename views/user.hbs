<div class="container-fluid">
    <h1 class="mt-4">Information of User</h1>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <form>
                <div class="form-group input-group" id="usernameField">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Username</div>
                    </div>
                    <input type="text" class="form-control" id="username" value={{user.username}} disabled/>
                </div>
                <div class="form-group input-group" id="fullnameField">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Full name</div>
                    </div>
                    <input type="text" class="form-control" id="fullname" value={{user.fullname}}/>
                </div>
                <div class="form-group input-group" id="genderField">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Gender</div>
                    </div>
                    <input type="email" class="form-control" id="gender" value={{user.email}} />
                    <div class="invalid-feedback" id="emailErr"></div>
                </div>
                <div class="form-group input-group" id="emailField">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Email</div>
                    </div>
                    <input type="email" class="form-control" id="email" value={{user.email}} required/>
                    <div class="invalid-feedback" id="emailErr"></div>
                </div>
                <div class="form-group input-group" id="birthField">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Birthday</div>
                    </div>
                    <input type="email" class="form-control" id="birth" value={{user.birth}}/>
                    <div class="invalid-feedback" id="emailErr"></div>
                </div>
                <div class="form-group input-group" id="addressField">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Address</div>
                    </div>
                    <input type="email" class="form-control" id="address" value={{user.address}}/>
                    <div class="invalid-feedback" id="emailErr"></div>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <button class="btn btn-danger col-sm-2" id="btnSave" disabled>Save</button>
                    <div class="col-sm-auto"></div>
                    <button class="btn btn-primary col-sm-2" id="btnCancel">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>