<!-- breadcrumb -->
<div class="container mar-t-50">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
			Home
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<a href="/shop" class="stext-109 cl8 hov-cl1 trans-04">
			Shop
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			{{detail.title}}
		</span>
	</div>
</div>


<section class="sec-product-detail bg0 p-t-65 p-b-60">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-7 p-b-30">
				<div class="p-l-25 p-r-30 p-lr-0-lg">
					<div class="wrap-slick3 flex-sb flex-w">
						<div class="wrap-slick3-dots"></div>
						<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

						<div class="slick3 gallery-lb">
							<!-- List images of the book -->
							
									<div class="item-slick3" data-thumb="{{detail.image}}">
										<div class="wrap-pic-w-edit pos-relative">
											<img src="{{detail.image}}" alt="IMG-PRODUCT">
											<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="{{detail.image}}">
												<i class="fa fa-expand"></i>
											</a>
										</div>
									</div>
								
						</div>
					</div>
				</div>
			</div>
				
			<div class="col-md-6 col-lg-5 p-b-30">
				<div class="p-r-50 p-t-5 p-lr-0-lg">
					<h4 class="mtext-105 cl2 js-name-detail p-b-14">
						{{detail.title}}
					</h4>

					<span class="mtext-106 cl2">
						{{detail.base_price}} VNĐ
					</span>

					<p class="stext-102 cl3 p-t-23">
						{{detail.description_title}}
					</p>
					
					<!--  -->
					<div class="p-t-33">

						<div class="flex-w flex-r-m p-b-10">
							<div class="size-204 flex-w flex-m respon6-next">
								<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" onclick="AddToCart('{{detail.id}}')">
									Add to cart
								</button>
							</div>
						</div>	
					</div>

					<!--  -->
					<div class="flex-w flex-m p-l-100 p-t-40 respon7">
						<div class="flex-m bor9 p-r-10 m-r-11">
							<a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Add to Wishlist">
								<i class="zmdi zmdi-favorite"></i>
							</a>
						</div>

						<a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
							<i class="fa fa-facebook"></i>
						</a>

						<a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
							<i class="fa fa-twitter"></i>
						</a>

						<a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
							<i class="fa fa-google-plus"></i>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="bor10 m-t-50 p-t-43 p-b-40" id="my-tab">
			<!-- Tab01 -->
			<div class="tab01">
				<!-- Nav tabs -->
				<ul class="nav nav-tabs" role="tablist">
					<li class="nav-item p-b-10">
						<a class="nav-link active" data-toggle="tab" href="#description" role="tab">Description</a>
					</li>

					<li class="nav-item p-b-10">
						<a class="nav-link" data-toggle="tab" href="#information" role="tab">Additional information</a>
					</li>

					<li class="nav-item p-b-10">
						<a class="nav-link" data-toggle="tab" href="#reviews" role="tab">Reviews</a>
					</li>
				</ul>

				<!-- Tab panes -->
				<div class="tab-content p-t-43">
					<!-- - -->
					<div class="tab-pane fade show active" id="description" role="tabpanel">
						<div class="how-pos2 p-lr-15-md">
							<p class="stext-102 cl6">
								{{detail.description}}
							</p>
						</div>
					</div>

					<!-- - -->
					<div class="tab-pane fade" id="information" role="tabpanel">
						<div class="row">
							<div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
								<ul class="p-lr-28 p-lr-15-sm">
									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											ISBN:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.isbn}}
										</span>
									</li>

									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Nhà cung cấp:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.supplier}}
										</span>
									</li>

									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Tác giả:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.author}}
										</span>
									</li>

									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Nhà xuất bản:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.publisher}}
										</span>
									</li>

									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Năm xuất bản:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.public_year}}
										</span>
									</li>

									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Trọng lượng:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.weight}}
										</span>
									</li>

									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Kích thước bao bì:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.size}}
										</span>
									</li>
									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Số trang:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.number_page}}
										</span>
									</li>
									<li class="flex-w flex-t p-b-7">
										<span class="stext-102 cl3 size-205">
											Hình thức:
										</span>

										<span class="stext-102 cl6 size-206">
											{{detail.page}}
										</span>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- - -->
					<div class="tab-pane fade" id="reviews" role="tabpanel">
						<div class="row">
							<div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
								<div class="p-b-30 m-lr-15-sm">
									<!-- Review -->
									<div id="preview-list">
										{{#if reviews}}
											{{#each reviews}}
											<div class="flex-w flex-t p-b-68">
												{{!-- <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
													<img src="{{avatar}}" alt="AVATAR">
												</div> --}}

												<div class="size-207">
													<div class="flex-w flex-sb-m p-b-17">
														<span class="mtext-107 cl2 p-r-20">
															{{fullname}}
														</span>
													</div>

													<p class="stext-102 cl6">
														{{review}}
													</p>
												</div>
											</div>
											{{/each}}	
										{{/if}}
									</div>

									<!-- Page -->
									<div class="flex-c-m flex-w w-full p-t-45" id="page">
										{{#if page.totalPage}}
										<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="changeReview('1', '{{page.id}}');">
											Đầu
										</button>

										{{#if page.prevPrevPage}}
											<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="changeReview('{{page.prevPrevPage}}', '{{page.id}}');">
												{{page.prevPrevPage}}
											</button>
										{{/if}}

										{{#if page.prevPage}}
											<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="changeReview('{{page.prevPage}}', '{{page.id}}');">
												{{page.prevPage}}
											</button>
										{{/if}}

										{{#if page.currentPage}}
											<button class="flex-c-m stext-101 cl0 size-103-edit bg3 bor1 p-lr-15 trans-04">
												{{page.currentPage}}
											</button>
										{{/if}}

										{{#if page.nextPage}}
											<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="changeReview('{{page.nextPage}}', '{{page.id}}');">
												{{page.nextPage}}
											</button>
										{{/if}}

										{{#if page.nextNextPage}}
											<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="changeReview('{{page.nextNextPage}}', '{{page.id}}');">
												{{page.nextNextPage}}
											</button>
										{{/if}}
										
										<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="changeReview('{{page.totalPage}}', '{{page.id}}');">
											Cuối
										</button>

										{{/if}}
									</div>
									
									{{#if user}}
									<!-- Add review -->
									<div class="mar-t-50" id="preview-form">
										<div class="w-full">
											<h5 class="mtext-108 cl2 p-b-7">
												Add a review
											</h5>

											<p class="stext-102 cl6">
												Thêm bình luận của bạn về sản phẩm
											</p>

											<div class="row p-b-25">
												<div class="col-12 p-b-5">
													<label class="stext-102 cl3" for="review">Your review</label>
													<textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review" name="review"></textarea>
												</div>
											</div>

											<button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10" onclick="submitReview('{{detail.id}}');">
												Submit
											</button>
										</div>
									</div>
									{{/if}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- related product-->
{{#if books}}
<section class="sec-relate-product bg0 p-t-45 p-b-105">
	<div class="container">
		<div class="p-b-45">
			<h3 class="ltext-106 cl5 txt-center">
				Related Products
			</h3>
		</div>

		<!-- Slide2 -->
		<div class="wrap-slick2">
			<div class="slick2">
				{{#each books}}
				<div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
					<!-- Block2 -->
					<div class="block2">
						<div class="block2-pic hov-img0">
							<img class="img-edit1" src="{{book.image}}" alt="IMG-PRODUCT" >

							<a href="/shop/{{book.id}}?title={{str}}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
								Xem sản phẩm
							</a>
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<a href="/shop/{{book.id}}?title={{str}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									{{book.title}}
								</a>
							</div>

							<div class="block2-txt-child2 flex-r p-t-3">
								<button class="btn-addwish-b2 dis-block pos-relative js-addcart-b2" onclick="AddToCart('{{book.id}}')">
									<img class="icon-heart1 dis-block trans-04 view-img1" src="../images/icons/add-to-cart.png" alt="ICON">
									<img class="icon-heart2 dis-block trans-04 view-img1 ab-t-l" src="../images/icons/add-to-cart-hov.png" alt="ICON">
								</button>
							</div>

							<div class="block2-txt-child3 flex-w flex-t flex-col-l" style="display: inline-block;">
								<span class="stext-105 cl3 float-left-item">
									{{book.base_price}} VNĐ
								</span>
								<p class="stext-105 cl6 float-right-item view-text-margin" style="color: color:rgb(148, 148, 148);">
									{{book.views}}
								</p>
								<img class="view-img float-right-item" src="../images/icons/visibility.png" alt="view" >
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</section>
{{/if}}



