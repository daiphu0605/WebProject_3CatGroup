<div class="container-fluid">
    {{#if user}}
    <h1 class="mt-4">Information of User</h1>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <form id="myForm">
                <div class="align-items-start">
                    <div class="mb-3 row" id="oldpasswordField">
                    <label class="col-sm-2 col-form-label">Old password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="oldPassword" id="oldPassword" required>
                        <div class="invalid-feedback" id="oldPasswordErr"></div>
                    </div>
                </div>
                <div class="mb-3 row" id="newPasswordField">
                    <label class="col-sm-2 col-form-label">New password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="newPassword" id="newPassword" required>
                                                <div class="invalid-feedback" id="newPasswordErr"></div>
                    </div>
                </div>
                <div class="mb-3 row" id="confirmNewPasswordField">
                    <label class="col-sm-2 col-form-label">Confirm new password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="confirmNewPassword" id="confirmNewPassword" required>
                        <div class="invalid-feedback" id="confirmNewPasswordErr"></div>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <input type="submit" class="btn btn-danger col-sm-2" id="btnChange" value="Change">
                </div>
            </form>
        </div>
    </div>
    {{else}}
        <h1 class="mt-4">Bạn cần đăng nhập để thực hiện chức năng này</h1>
    {{/if}}
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="js/user_changepass.js"></script>