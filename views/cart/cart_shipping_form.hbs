<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg"></div>
<section class="bg0 p-t-75 p-b-85">
    <div class="container">
        {{#if cart.totalQty}}
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Sản phẩm</th>
                                <th class="column-2"></th>
                                <th class="column-3">
                                    <p class="mar-30">
                                        Giá
                                    </p>
                                </th>
                                <th class="column-4">Số lượng</th>
                                <th class="column-5">Tổng</th>
                            </tr>
                            {{#each cart.items}}
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="{{item.image}}" alt="IMG">
                                        </div>
                                    </td>
                                    <td class="column-2">{{item.title}}</td>
                                    <td class="column-3">{{item.base_price}}</td>
                                    <td class="column-4">
                                        <div class="wrap-num-product-edit flex-w m-l-auto m-r-0">
                                            <p class="mx-center">
                                                {{qty}}
                                            </p>
                                        </div>
                                    </td>
                                    <td class="column-5">{{price}}</td>
                                </tr>
                            {{/each}}

                        </table>
                    </div>

                    
                </div>
            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Thông tin giao hàng
                    </h4>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Tiền sách:
                            </span>
                        </div>

                        <div class="size-209">
                            <span class="mtext-110 cl2">
                                {{cart.totalPrice}} VNĐ
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Giao hàng:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                            
                            <div class="p-t-15">
                                <span class="stext-112 cl8">
                                    Thông tin giao hàng
                                </span>
                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="name" id="name" placeholder="Tên" onkeyup="check(this.value,this.name);">
                                </div>
                                <span id="name-info"></span>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="phone" id="phone" placeholder="Số điện thoại" onkeyup="check(this.value,this.name);">
                                </div>
                                <span id="phone-info"></span>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="province" id="province" placeholder="Tỉnh / thành phố" onkeyup="check(this.value,this.name);">
                                </div>
                                <span id="province-info"></span>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="district" id="district" placeholder="Quận / huyện" onkeyup="check(this.value,this.name);">
                                </div>
                                <span id="district-info"></span>

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="ward" id="ward" placeholder="Phường / xã" onkeyup="check(this.value,this.name);">
                                </div>
                                <span id="ward-info"></span>

                                <div class="bor8 bg0 m-b-22">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="address" id="address" placeholder="Địa chỉ" onkeyup="check(this.value,this.name);">
                                </div>
                                <span id="address-info"></span>
                                    
                            </div>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Phương thức thanh toán:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                            <div>
                                <span class="stext-112-edit cl8 float-right-item">
                                    Online
                                </span>
                                <input class="float-right-item mar-r-10" type="radio" id="online" name="payment" value="online"><br>
                            </div>

                            <div >
                                <span class="stext-112-edit cl8 float-right-item">
                                    Trực tiếp
                                </span>
                                <input class="float-right-item" type="radio" id="offline" name="payment" value="offline">
                            </div>
                        </div>
                    </div>

                    {{#if user}}
                        {{#if cart.totalQty}}
                            <div class="mcenter">
                                <div class="header-cart-buttons flex-w w-full mcenter">
                                    <button class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 mcenter" onclick="completedClick('{{cart.totalQty}}');">
                                        Đặt hàng
                                    </button>
                                </div>
                            </div>
                        {{else}}
                            <div class="mcenter">
                            <div class="header-cart-buttons flex-w w-full mcenter">
                                <button class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 mcenter" onclick="checkCart();">
                                    Đặt hàng
                                </button>
                            </div>
                        </div>
                        {{/if}}
                    {{else}}
                        <div class="mcenter">
                            <div class="header-cart-buttons flex-w w-full mcenter">
                                <button class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 mcenter" onclick="checkSignIn();">
                                    Đặt hàng
                                </button>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        {{else}}
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                Giỏ hàng trống
            </h3>
        </div>
        {{/if}}
    </div>
</section>
