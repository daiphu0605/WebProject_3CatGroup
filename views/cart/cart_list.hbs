<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg"></div>
<section class="bg0 p-t-75 p-b-85" id="cur-cart-list">
    <div class="container">
        {{#if cart.totalQty}}
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Sản phẩm</th>
                                <th class="column-2"></th>
                                <th class="column-3">
                                    <p class="mar-30">
                                        Giá
                                    </p>
                                </th>
                                <th class="column-4">Số lượng</th>
                                <th class="column-5">Tổng</th>
                            </tr>
                            {{#each cart.items}}
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="{{item.image}}" alt="IMG">
                                        </div>
                                    </td>
                                    <td class="column-2">{{item.title}}</td>
                                    <td class="column-3">{{item.base_price}}</td>
                                    <td class="column-4">
                                        <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                            <button class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m" onclick="reduceBook('{{item.id}}')">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </button>

                                            <div class="mtext-104 cl3 txt-center num-product">
                                                <p class="mx-center">
                                                    {{qty}}
                                                </p>
                                            </div>

                                            <button class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" onclick="increaseBook('{{item.id}}')">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="column-5">{{price}}</td>
                                </tr>
                            {{/each}}

                        </table>
                    </div>

                    
                </div>
            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Đơn hàng
                    </h4>

                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
                            <span class="mtext-101 cl2">
                                Tổng:
                            </span>
                        </div>

                        <div class="size-209 p-t-1">
                            <span class="mtext-110 cl2">
                                {{cart.totalPrice}} VNĐ
                            </span>
                        </div>
                    </div>

                    {{#if user}}
                        {{#if cart.totalQty}}
                            <div class="mcenter">
                                <div class="header-cart-buttons flex-w w-full mcenter">
                                    <a href="/checkout" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 mcenter">
                                        Thanh toán
                                    </a>
                                </div>
                            </div>
                        {{else}}
                            <div class="mcenter">
                            <div class="header-cart-buttons flex-w w-full mcenter">
                                <button class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 mcenter" onclick="checkCart()">
                                    Thanh toán
                                </button>
                            </div>
                        </div>
                        {{/if}}
                    {{else}}
                        <div class="mcenter">
                            <div class="header-cart-buttons flex-w w-full mcenter">
                                <button class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 mcenter" onclick="checkSignIn()">
                                    Thanh toán
                                </button>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        {{else}}
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                Giỏ hàng trống
            </h3>
        </div>
        {{/if}}
    </div>
</section>




