<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                     Welcome to our website
                </div>

                <div class="right-top-bar flex-w h-full">
                    {{#if user}}
                        <a href="/user" class="flex-c-m trans-04 p-lr-25">
                            My Account
                        </a>
                        <a href="/user/signout" class="flex-c-m trans-04 p-lr-25">
                            Log Out
                        </a>
                    {{else}}
                        <a href="/signin" class="flex-c-m trans-04 p-lr-25">
                            Sign In
                        </a>
                        <a href="/signup" class="flex-c-m trans-04 p-lr-25">
                            Sign Up
                        </a>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop container">
                
                <!-- Logo desktop -->		
                <a href="/shop" class="logo">
                    <img src="../../images/icons/3catbookshop.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li class="active-menu">
                            <a href="/">Home</a>
                            
                        </li>

                        <li>
                            <a href="/shop">Shop</a>
                        </li>

                        <li class="label1" data-label1="hot">
                            <a href="/shop?sort=popularity">Features</a>
                        </li>

                        <li>
                            <a href="/">About</a>
                        </li>

                    </ul>
                </div>	

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    <div>
                        {{#if cart.totalQty}}
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart" id="icon-cart">
                            <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="{{cart.totalQty}}">
                                <i class="zmdi zmdi-shopping-cart"></i>
                            </div>   
                        </div> 
                                                 
                        {{else}}
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart" id="icon-cart">
                            <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart">
                                <i class="zmdi zmdi-shopping-cart"></i>
                            </div>
                        </div> 
                        {{/if}}
                    </div>
                </div>
            </nav>
        </div>	
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->		
        <div class="logo-mobile">
            <a href="/"><img src="../../images/icons/3catbookshop.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            <div>
                {{#if cart.totalQty}}
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart" id="icon-cart">
                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="{{cart.totalQty}}">
                        <i class="zmdi zmdi-shopping-cart"></i>
                    </div>   
                </div> 
                                            
                {{else}}
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart" id="icon-cart">
                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart">
                        <i class="zmdi zmdi-shopping-cart"></i>
                    </div>
                </div> 
                {{/if}}
            </div>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="topbar-mobile">
            <li>
                <div class="left-top-bar">
                     Welcome to our website
                </div>
            </li>

            <li>
                <div class="right-top-bar flex-w h-full">
                    {{#if user}}
                        <a href="/user" class="flex-c-m trans-04 p-lr-25">
                            My Account
                        </a>
                        <a href="/user/signout" class="flex-c-m trans-04 p-lr-25">
                            Log Out
                        </a>
                    {{else}}
                        <a href="/signin" class="flex-c-m trans-04 p-lr-25">
                            Sign In
                        </a>
                        <a href="/signup" class="flex-c-m trans-04 p-lr-25">
                            Sign Up
                        </a>
                    {{/if}}
                </div>
            </li>
        </ul>

        <ul class="main-menu-m">
            <li>
                <a href="/">Home</a>
                
            </li>

            <li>
                <a href="/shop">Shop</a>
            </li>

            <li>
                <a href="/shop?sort=popularity" class="label1 rs1" data-label1="hot">Features</a>
            </li>

            <li>
                <a href="/">About</a>
            </li>
        </ul>
    </div>
</header>

<script type="text/x-handlebars-template" id="icon-template">
    \{{#if this.totalQty}}
        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="\{{this.totalQty}}">
            <i class="zmdi zmdi-shopping-cart"></i>
        </div>
    \{{else}}
        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart">
            <i class="zmdi zmdi-shopping-cart"></i>
        </div>
    \{{/if}}
</script>
