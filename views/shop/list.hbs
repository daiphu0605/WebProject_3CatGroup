			\{{this.prevPrevPage}}
		</button>
	\{{/if}}
{{!-- /shop?page={{page.prevPage}} --}}
	\{{#if this.prevPage}}
		<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="replaceProducts('\{{this.currentPage}}','\{{this.prevPage}}','\{{this.category}}','\{{this.sort}}','\{{this.price}}','\{{this.supplier}}','\{{this.author}}','\{{this.publisher}}');">
			\{{this.prevPage}}
		</button>
	\{{/if}}

	\{{#if this.currentPage}}
