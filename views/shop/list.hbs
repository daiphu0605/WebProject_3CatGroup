		</button>
	\{{/if}}
{{!-- /shop?page={{page.nextPage}} --}}
	\{{#if this.nextPage}}
		<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="replaceProducts('/{{this.currentPage}}','/{{this.nextPage}}','\{{this.category}}','\{{this.sort}}','\{{this.price}}','\{{this.supplier}}','\{{this.author}}','\{{this.publisher}}');">
			\{{this.nextPage}}
		</button>
	\{{/if}}

	\{{#if this.nextNextPage}}
		<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="replaceProducts('/{{this.currentPage}}','/{{this.nextNextPage}}','\{{this.category}}','\{{this.sort}}','\{{this.price}}','\{{this.supplier}}','\{{this.author}}','\{{this.publisher}}');">
			\{{this.nextNextPage}}
		</button>
	\{{/if}}
{{!-- /shop?page={{page.totalPage}} --}}
	<button class="flex-c-m stext-101 cl5 size-103-edit bg2 bor1 hov-btn1 p-lr-15 trans-04" onclick="replaceProducts('/{{this.currentPage}}','/{{this.totalPage}}','\{{this.category}}','\{{this.sort}}','\{{this.price}}','\{{this.supplier}}','\{{this.author}}','\{{this.publisher}}');">
		Cuối
	</button>
</script>